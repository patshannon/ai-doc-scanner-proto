# Backend API
# If empty, the app uses mock /analyze responses.
EXPO_PUBLIC_API_BASE_URL=http://127.0.0.1:8000

# Feature flags
# Optional: force mocks even if API is set (true|false)
EXPO_PUBLIC_USE_MOCKS=false

# Firebase (Web config)
# Required for email/password auth screens. Create a Firebase project + Web app, then paste values.
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=
# Optional
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Google OAuth client IDs (for Google Sign-In)
# From Google Cloud Console â€” OAuth 2.0 Client IDs
# Needed for the "Test Google OAuth" flow and eventual Drive upload.
# For Firebase Auth Google Sign-In on the login screen, use the Web Client ID:
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=
EXPO_PUBLIC_GOOGLE_CLIENT_ID_IOS=
EXPO_PUBLIC_GOOGLE_CLIENT_ID_ANDROID=
EXPO_PUBLIC_GOOGLE_CLIENT_ID_WEB=

# Google Drive scopes (default is drive.file for per-app files)
EXPO_PUBLIC_GOOGLE_DRIVE_SCOPES=https://www.googleapis.com/auth/drive.file
